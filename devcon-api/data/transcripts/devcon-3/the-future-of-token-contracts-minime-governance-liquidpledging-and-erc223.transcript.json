			"timestamps": {
				"from": "00:16:38,360",
				"to": "00:16:41,760"
			},
			"offsets": {
				"from": 998360,
				"to": 1001760
			},
			"text": " And now we have reached the end of my talk."
		},
		{
			"timestamps": {
				"from": "00:16:41,760",
				"to": "00:16:44,520"
			},
			"offsets": {
				"from": 1001760,
				"to": 1004520
			},
			"text": " I welcome comments and feedback."
		},
		{
			"timestamps": {
				"from": "00:16:44,520",
				"to": "00:16:50,640"
			},
			"offsets": {
				"from": 1004520,
				"to": 1010640
			},
			"text": " Please feel free to reach out to me, to grief or to any give with team members."
